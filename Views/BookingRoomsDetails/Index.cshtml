@model IEnumerable<HotelRoomBookingSystem.Models.BookingRoomsDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Booked Room Listing</h1>

<br />

@using (Html.BeginForm("Index", "BookingRoomsDetails", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-3 col-xs-6">
            @Html.Editor("id", "", new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Booking ID" } })
        </div>
        <div class="col-md-3 col-xs-6">
            <button class="btn btn-primary">Search</button>
        </div>
    </div>
}

    <br />


<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered table-striped">
            <thead class="thead-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BookingId)</th>
                    <th>@Html.DisplayNameFor(model => model.RoomId)</th>
                </tr>
            </thead>

            <tbody>

                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.BookingId)</td>
                        <td>@Html.DisplayFor(modelItem => item.RoomId)</td>
                    </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="12">@ViewBag.BookingRoomNotFound</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
    


