@model IEnumerable<HotelRoomBookingSystem.Models.BookingsInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Booking Listing</h1>
<br />


@using (Html.BeginForm("Index", "BookingsInfoes", FormMethod.Post, new { id = "searchForm" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-3 col-xs-6">
            @Html.Editor("id", "", new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Booking ID" } })
        </div>
        <div class="col-md-3 col-xs-6">
            <button class="btn btn-primary">Search</button>
        </div>
    </div>
}

    <br />

   
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead class="thead-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.ClientId)</th>
                    <th>@Html.DisplayNameFor(model => model.BookingDate)</th>
                    <th>@Html.DisplayNameFor(model => model.CheckInDate)</th>
                    <th>@Html.DisplayNameFor(model => model.CheckOutDate)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

               @if (Model.Count() > 0)
                {
                    <!-- Loop through bookings and display rows -->
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.ClientId)</td>
                            <td>@Html.DisplayFor(modelItem => item.BookingDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.CheckInDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.CheckOutDate)</td>
                            <td>
                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })*@
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="12">@ViewBag.BookingNotFound</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


    



